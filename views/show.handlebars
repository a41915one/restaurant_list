<h1 class="mb-1 restaurant-show-title">{{restaurantData.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurantData.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurantData.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurantData.phone}}
      </p>

      <p class="mb-5">
        {{restaurantData.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurantData.image}}" alt="{{restaurantData.name}}"
        style="max-width: 600px;" />

      <div class="mb-5 mt-5">
        <div>
          <a href="/"><button class="btn btn-primary">返回餐廳列表</button></a>
        </div>
        <a href="/restaurants/{{restaurantData._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
      </div>
      <div>
        <form action="/restaurants/{{restaurantData._id}}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-danger btn-sm text-white mt-3 mb-3">delete</button>
      </div>
    </div>
  </div>
</div>